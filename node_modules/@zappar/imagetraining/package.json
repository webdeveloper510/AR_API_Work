{
  "name": "@zappar/imagetraining",
  "version": "3.0.0",
  "description": "Converts image files into the target files used by Zappar's image tracking technology",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build-typescript": "tsc -p tsconfig-build.json",
    "build-standalone": "node_modules/.bin/webpack --config=webpack.config.standalone.ts --mode=production",
    "build": "npm run build-standalone && npm run build-typescript",
    "test": "PW_EXPERIMENTAL_TS_ESM=1 playwright test",
    "start": "webpack serve --mode development --stats-children --config=webpack.config.tests.ts",
    "watch": "webpack --watch --mode development --config=webpack.config.tests.ts",
    "watch:ts": "tsc --watch"
  },
  "files": [
    "README.md",
    "lib/**/*",
    "umd/**/*"
  ],
  "keywords": [],
  "author": "Zappar Limited",
  "license": "Proprietary",
  "dependencies": {
    "comlink": "4.3.1",
    "jimp": "^0.16.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.25.1",
    "@types/node": "^18.7.14",
    "@types/webpack": "^5.28.0",
    "@zappar/eslint-config-zappar": "1.0.8",
    "@zappar/zappar": "^2.0.0",
    "binary-shannon-entropy": "1.1.3",
    "buffer": "^6.0.3",
    "eslint": "^8.23.0",
    "fetch-h2": "^3.0.2",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.5.0",
    "ts-loader": "^9.3.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.2",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.10.1",
    "worker-loader": "^3.0.8"
  }
}
